<%- include("partials/header") %>
<div class="container">
    <div class = "row">
        <div style ="width:30%; margin: 30px auto;">
        <h1 style ="text-align: center; font-size: 29px;">Create a new campground</h1>
    <form action="/campgrounds" method="POST">
        <div class ="form-group">
            <input class="form-control" type="text" name="name"  placeholder="name">
        </div>
        <div class="form-group">
            <input class="form-control" type="text"  name="image" placeholder="image url">
        </div>
        <div class="form-group">
            <input class="form-control" type="description" name="description" placeholder="description">
        </div>
        <div class="form-group">
            <input class="form-control" type="number"  name="price" placeholder="price" min="0.0" step="0.01">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block">Submit</button>
        </div>
    </form>
            <a href="/campgrounds">Go back</a>
        </div>
    </div>
</div>
