<%- include("partials/header") %>

<div class="container">
<header class="jumbotron" style="margin: 25px">
    <div class="container">
    <h1>Welcome to CampFinder</h1>
    <p>Check all the Campgrounds from all over the world</p>
    <p>
        <a class="btn btn-primary btn-large"   href ="/campgrounds/new">Add new campgrounds</a>
    </p>
    </div>
    </header>
<div class="row">
    <div class="col-lg-12">
        <h3 style="margin: 22px"> Our Most Popular Campgrounds </h3>
    </div>
</div>

<div class ="row text-center" style="flex-wrap: wrap; display: flex; margin: 10px">
<% campgrounds.forEach(function(campground){ %>
  <div class="col-md-3 col-sm-6" >
      <div class="img-thumbnail">
          <div class="card">
    <img style="height:164px" src="<%= campground.image%>">
          </div>
          <div class="caption">
              <h4><%= campground.name %></h4>
          </div>
          <p>
              <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
          </p>
      </div>
  </div>
<%});%>
</div>
</div>

<%- include("partials/footer") %>