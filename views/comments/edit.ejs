<%- include("../partials/header") %>
<div class="container">
    <div class = "row">
        <div style ="width:30%; margin: 30px auto;">
            <h1 style ="text-align: center; font-size: 29px;">Edit Comment</h1>
            <div style="width: 30%; margin: 25px auto">
            <form action="/campgrounds/<%= campground_id %>/comments/<%= comment %>?_method=PUT" method="POST">
                <div class ="form-group">
                    <input class="form-control" type="text" name="campground[text]"  value="<%= comment.text%>">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">Go back</a>
        </div>
        </div>
    </div>
</div>
